/**
 * Implements hook_help().
 */
function citygroups_help($path, $arg) {
  switch ($path) {
    case 'citygroups_collection':
      $explanation = t(
        'Custom content for CityGroups site.');
      return "<p>$explanation</p>";
  }
}

